<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsPad" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="buttonConvert" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/convertButton</item>
        <item name="android:textSize">38sp</item>
    </style>

    <style name="textViewInput">
        <item name="android:textSize">56sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HScrollView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ImageButtonView" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:alpha">.54</item>
        <item name="android:background"></item>
    </style>

</resources>