<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonsPad" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="buttonConvert" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/convertButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="textViewInput">
        <item name="android:textSize">56sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

</resources>